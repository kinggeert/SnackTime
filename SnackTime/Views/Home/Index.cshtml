@Model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .grid-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 100%;
    }
</style>

<div class="grid-wrapper">
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    Categorie
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Categories) {
                <tr>
                    <td>
                        @item.Name
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>
                    Producten
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.SelectedCategory.ProductsInCategory) {
                <tr>
                    <td>
                        @item.Name
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div>
        thing 3
    </div>
</div>