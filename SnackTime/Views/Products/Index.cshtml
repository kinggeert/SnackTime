@model IEnumerable<SnackTime.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product naam
            </th>
            <th>
                Prijs
            </th>
            <th>
                Categorie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategory.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Identifier">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Identifier">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
