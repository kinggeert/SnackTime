@model SnackTime.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Product.Identifier" value="@Model.Product.Identifier"/>
            <input type="hidden" name="Product.ImagePath" value="none"/>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductCategory.Identifier" class="control-label">Category</label>
                <select asp-for="Product.ProductCategory.Identifier"
                        asp-items="@(new SelectList(Model.AvailableCategories, "Identifier", "Name"))"
                        class="form-control">
                    <option value="">Select a category</option>
                </select>
                <span asp-validation-for="Product.ProductCategory.Identifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
